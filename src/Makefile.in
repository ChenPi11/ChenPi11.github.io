srcdir = @srcdir@
top_srcdir = @top_srcdir@

CC ?= @CC@
CFLAGS ?= @CFLAGS@
LDFLAGS ?= @LDFLAGS@
INCLUDES ?= -I../include
PREFIX ?= @prefix@
INSTALL = @INSTALL@

RM ?= rm -f

SRC= $(wildcard *.c)

.PHONY : all install clean allclean

all : build-post

build-post : $(SRC:.c=.o)
	$(CC) $(CFLAGS) $(LDFLAGS) $^ -o $@

install : all
	$(INSTALL) -m 755 build-post $(PREFIX)/bin

%.o : %.c
	$(CC) $(CFLAGS) $(INCLUDES) -c $< -o $@

clean :
	$(RM) *.o
	$(RM) blog-build

allclean : clean
	$(RM) Makefile
