srcdir = @srcdir@
top_srcdir = @top_srcdir@

BUILD_TYPE ?= @BUILD_TYPE@
PREFIX ?= @prefix@
CFLAGS_RELEASE = -fPIC -O3 -Wall -Wextra
CFLAGS_DEBUG = @CFLAGS@

CC ?= @CC@
CFLAGS ?= $(CFLAGS_$(BUILD_TYPE))
LDFLAGS ?= @LDFLAGS@
INSTALL ?= @INSTALL@

RM ?= rm -f

INCLUDES ?= -I../include
SRC= $(wildcard *.c)

.PHONY : all install uninstall clean binclean allclean

all : build-post

build-post : $(SRC:.c=.o)
	$(CC) $(CFLAGS) $(LDFLAGS) $^ -o $@

install : all
	$(INSTALL) -m 755 build-post $(PREFIX)/bin

uninstall :
	$(RM) $(PREFIX)/bin/build-post

%.o : %.c
	$(CC) $(CFLAGS) $(INCLUDES) -c $< -o $@

clean :
	$(RM) *.o
	$(RM) build-post

binclean : clean

allclean : clean binclean
	$(RM) Makefile
