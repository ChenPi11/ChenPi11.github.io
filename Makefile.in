srcdir = $(shell realpath -s "@srcdir@")
top_srcdir = $(shell realpath -s "@top_srcdir@")

PREFIX ?= @prefix@

SHELL ?= @SHELL@
CP ?= @CP@
MKDIR ?= mkdir -p
RM ?= rm -f
TOUCH ?= touch
NPX ?= @NPX@
CMAKE ?= @CMAKE@

CMAKE_CONFIGURE_SCRIPT = $(top_srcdir)/cmake/configure.cmake
VEX = $(top_srcdir)/scripts/vex

NPXVERBOSE ?= @NPXVERBOSE@
NPXFLAGS ?= $(NPXVERBOSE) @NPXFLAGS@
NPX += $(NPXFLAGS)
CMAKEVERBOSE ?= @CMAKEVERBOSE@
CMAKEFLAGS ?= $(CMAKEVERBOSE) @CMAKEFLAGS@
CMAKE += $(CMAKEFLAGS)
CB_UTILSVERBOSE ?= @CB_UTILSVERBOSE@

.PHONY : all env-setup wwwroot fonts favicon.ico log.html index.html lib posts build-blog trim run clean binclean allclean

all : env-setup wwwroot fonts favicon.ico lib build-blog log.html index.html posts trim

env-setup :
	cd bin && $(MAKE) $@

lib : env-setup
	cd lib && $(MAKE) all

wwwroot :
	$(MKDIR) $@

posts : wwwroot build-blog
	cd $@ && $(MAKE) all

fonts : wwwroot
	$(CP) -r $@ $<

favicon.ico : wwwroot
	$(CP) $@ $<

index.html.in :
	if [ ! -f $@ ]; then echo "Please run ./configure first!"; exit 1; fi

build-blog : env-setup
	$(VEX) build-blog $(CB_UTILSVERBOSE)

index.html : env-setup index.html.in build-blog wwwroot
	$(VEX) mkpostlists $(CB_UTILSVERBOSE) > postlists.tmp
	$(CMAKE) -DFROM=index.html.in -DTO=wwwroot/$@ \
	-DK0=CONTENT -DV0=FILE=postlists.tmp -DK1=SUBTITLE -DV1="Main" \
	-P $(CMAKE_CONFIGURE_SCRIPT) $(CMAKEFLAGS)
	$(RM) postlists.tmp

log.html : log-term.html index.html.in wwwroot
	$(CMAKE) -DFROM=index.html.in -DTO=wwwroot/$@ \
	-DK0=CONTENT -DV0=FILE=$< -DK1=SUBTITLE -DV1="Build Log" \
	-P $(CMAKE_CONFIGURE_SCRIPT) $(CMAKEFLAGS)

trim : wwwroot posts index.html
	$(VEX) trim-wwwroot $(CB_UTILSVERBOSE)

run :
	$(SHELL) ./scripts/run.sh

clean :
	cd bin && $(MAKE) $@
	cd lib && $(MAKE) $@
	cd po && $(MAKE) $@
	cd posts && $(MAKE) $@
	cd src && $(MAKE) $@
	$(RM) -r autom4te.cache
	$(RM) config.log
	$(RM) autoscan.log
	$(RM) config.h
	$(RM) config.hpp
	$(RM) compile_commands.json
	$(RM) config.status
	$(RM) mkpostlists/configure
	$(RM) configure
	$(RM) configure~
	$(RM) stamp-h1
	$(RM) src/build-post
	$(RM) posts/post-template.html.in
	$(RM) -r target
	$(RM) -r dist
	$(RM) -r posts/*.html
	$(RM) -r posts/*.info
	$(RM) -r posts/applets
	$(RM) index.html
	$(RM) index.html.in
	$(RM) log.html
	$(RM) -r build
	$(RM) -r *.tmp

binclean :
	cd bin && $(MAKE) $@
	cd bin && $(MAKE) uninstall
	cd lib && $(MAKE) $@
	cd po && $(MAKE) $@
	cd posts && $(MAKE) $@
	cd src && $(MAKE) $@
	$(RM) -r target
	$(RM) -r dist

allclean : clean
	cd bin && $(MAKE) $@
	cd lib && $(MAKE) $@
	cd po && $(MAKE) $@
	cd posts && $(MAKE) $@
	cd src && $(MAKE) $@
	$(RM) package-lock.json
	$(RM) Makefile
	$(RM) -r markdown-css
	$(RM) -r .venv
	$(RM) -r dist
	$(RM) -r package-lock.json
	$(RM) -r Cargo.lock
	$(RM) -r node_modules
	$(RM) -r xterm
	$(RM) buildlog.txt
	$(RM) -r .cache
	$(RM) config.h.in
	$(RM) config.h.in~
	$(RM) configure.scan
	$(RM) -r aclocal.m4
	$(RM) -r srcm4
	$(RM) -r srclib
	$(RM) -r build-aux
	$(RM) -r wwwroot
